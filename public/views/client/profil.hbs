<head>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


</head>

<div class="row">
  <div class="col-sm-12 sol-md-10 col-lg-8 mx-auto">
    <div class="card mt-5">
      <div class="card-header">
        <h4 class="text-center">Profil du client</h4>
      </div>

      <div class="card-body">
        <form class="needs-validation" novalidate action="/profil_update" method="post">

          <h6 class="text-center mb-3">Contact 1</h6>

          <div class="row">
            <div class="col">
              <label for="nom_parent1">Nom:</label>
              <input value="{{{nomContact1}}}" type="text" class="form-control" name="nom_contact1" placeholder="Entrer le nom du contact" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
            <div class="col">
              <label for="prenom_parent1">Prénom:</label>
              <input value="{{{prenomContact1}}}" type="text" class="form-control" name="prenom_contact1" placeholder="Entrer le prénom du contact" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
          </div>

          <div class="row mt-2">
            <div class="col">
              <label for="courriel_parent1">Courriel:</label>
              <input value="{{{courrielContact1}}}" type="email" class="form-control" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
            <div class="col">
              <label for="prenom_parent1">Téléphone:</label>
              <input value="{{{numTelContact1}}}" type="tel" class="form-control" name="num_telephone_contact1" placeholder="Entrer le numéro de téléphone du contact" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
          </div>

          <div id=divEmail1 class="row mt-2">
            <div class="col">
              <label for="courriel_contact1">Courriel d'Extra: </label>
              <input {{#if Contact1_courriel_extra1}}value="{{{Contact1_courriel_extra1}}}"{{/if}} type="email" class="form-control" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact">
              <input {{#if Contact1_courriel_extra2}}value="{{{Contact1_courriel_extra2}}}"{{/if}} type="email" class="form-control mt-2" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact">
              <input {{#if Contact1_courriel_extra3}}value="{{{Contact1_courriel_extra3}}}"{{/if}} type="email" class="form-control mt-2" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact">
            </div>
          </div>

          <hr class="mt-4">

          <!-- Contact 2 -->

          {{#if nomContact2}}

          <h6 class="text-center mb-3">Contact 2</h6>

          <div class="row">
            <div class="col">
              <label for="nom_parent1">Nom:</label>
              <input value="{{{nomContact2}}}" type="text" class="form-control" name="nom_contact1" placeholder="Entrer le nom du contact" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
            <div class="col">
              <label for="prenom_parent1">Prénom:</label>
              <input value="{{{prenomContact2}}}" type="text" class="form-control" name="prenom_contact1" placeholder="Entrer le prénom du contact" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
          </div>

          <div class="row mt-2">
            <div class="col">
              <label for="courriel_parent1">Courriel:</label>
              <input value="{{{courrielContact2}}}" type="email" class="form-control" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
            <div class="col">
              <label for="prenom_parent1">Téléphone:</label>
              <input value="{{{numTelContact2}}}" type="tel" class="form-control" name="num_telephone_contact1" placeholder="Entrer le numéro de téléphone du contact" pattern="[0-9]{3}-[0-9]{3}-[0-9]{4}" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
          </div>

          <div id=divEmail2 class="row mt-2">
            <div class="col">
              <label for="courriel_contact2">Courriel d'Extra: </label>
              <input {{#if Contact2_courriel_extra1}}value="{{{Contact2_courriel_extra1}}}"{{/if}} type="email" class="form-control" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact">
              <input {{#if Contact2_courriel_extra2}}value="{{{Contact2_courriel_extra2}}}"{{/if}} type="email" class="form-control mt-2" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact">
              <input {{#if Contact2_courriel_extra3}}value="{{{Contact2_courriel_extra3}}}"{{/if}} type="email" class="form-control mt-2" name="courriel_contact1" placeholder="Entrer l'adresse courriel du contact">
            </div>
          </div>
          {{/if}}


          <h6 class="text-center mb-3"> Enfant / Adolescent </h6>

          <div class="row">
            <div class="col">
              <label for="nom_enfant">Nom:</label>
              <input value="{{{enfantNom}}}" type="text" class="form-control" name="nom_client" placeholder="Entrer le nom de famille" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
            <div class="col">
              <label for="prenom_enfant">Prénom:</label>
              <input value="{{{enfantPrenom}}}" type="text" class="form-control" name="prenom_client" placeholder="Entrer le prénom" required>
              <div class="valid-feedback">Valide.</div>
              <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            </div>
          </div>

          <div class="row mt-2">
            <div class="col text-center">
              <button type="submit" class="btn btn-primary center-block mt-2">Modifier</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>
