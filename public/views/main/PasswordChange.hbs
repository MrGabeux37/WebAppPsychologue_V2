<head>

  <link rel="stylesheet" href="../../css/createaccount.css">
  <script type="text/javascript" src="../../script/createaccount/createaccount.js"></script>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>


</head>

<div class="row">
  <div class="col-sm-8 sol-md-6 col-lg-5 mx-auto">
    <div class="card mt-5">

      <div class="card-header">
        <h4 class="text-center">Modification du mot de passe</h4>
      </div>

      <div class="card-body">
        <form class="needs-validation" novalidate action="/changement_de_mot_de_passe" method="post">

          <div class="form-group">
            <label for="password1">Nouveau mot de passe: </label>
            <input type="text" class="form-control" name="password1" id="password1" placeholder="Entrer le mot de passe" required autofocus>
            <div class="valid-feedback">Valide.</div>
            <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
          </div>

          <div class="form-group">
            <label for="password2">Le mot de passe une deuxième fois: </label>
            <input type="text" class="form-control" oninput="CheckPW()" name="password2" id="password2" placeholder="Entrer le mot de passe une deuxième fois" required>
            <div class="valid-feedback">Valide.</div>
            <div class="invalid-feedback">S'il vous plait remplir le champ ci-dessus.</div>
            <p id="alertPW"></p>
          </div>

          <div class="text-center">
            <button id="bouton" type="submit" class="btn btn-primary center-block mb-2 mt-3" >Submit</button>
          </div>

        </form>
      </div>

    </div>
  </div>
</div>

<script>
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>
