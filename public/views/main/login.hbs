<div class="row">
  <div class="col-sm-8 col-md-6 col-lg-5 mx-auto">
    <div class="card card-signin my-5">
      <div class="card-body">

        <h5 class="card-title text-center">Connection</h5>

        {{#if message}}
          <div class="alert {{messageClass}}" role='alert'>
            {{message}}
          </div>
        {{/if}}

        <form class="form-signin" action="/login" method="post">
          <div class="form-label-group">
            <label for="inputCourriel">Adresse Courriel</label>
            <input type="nomEnfant" id="inputEnfant" name="inputCourriel" class="mb-2 form-control" placeholder="Adresse Courriel" required autofocus>
          </div>

          <div class="form-label-group">
            <label for="inputPassword">Mot de passe</label>
            <input type="password" id="inputPassword" name="inputPassword" class="form-control" placeholder="Mot de passe" required>
          </div>
          <div class="text-center">
          <button class="mt-4 btn btn-lg btn-success btn-block text-uppercase" type="submit">Connection</button>
          </div>
        </form>
        <hr class="my-3">

        <h6 class="text-center">Vous n'avez pas de compte?</h6>
        <div class="text-center">
          <a class="mt-3 btn btn-lg btn-success btn-block text-uppercase" href="register">Cr√©er un compte</a>
        </div>
      </div>
    </div>
  </div>
</div>
