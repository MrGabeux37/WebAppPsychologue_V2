<head>

<script type="text/javascript" src="../../../script/psychologue/modificationRendezVous.js"></script>

</head>

<div class="row">
  <div class="col-sm-14 sol-md-11 col-lg-8 mx-auto">
    <div class="card mt-5">

      <div class="card-header">
        <h4 class="text-center">Liste des Réservations</h4>
      </div>

      <div class="card-body text-center" id="chaquereservation">

        <div class="row">
          <div class="col">
            <a href="/psychologue/reservations/listeReservations/ancienne" type="button" class="btn btn-success center-block mt-2">Anciennes Réservations</a>
            <a href="/psychologue/reservations/listeReservations/future" type="button" class="btn btn-success center-block mt-2">Réservations Futures</a>
            <a href="/psychologue/reservations/listeReservations" type="button" class="btn btn-success center-block mt-2">Toutes les Réservations</a>
          </div>
        </div>
        <hr class="mt-4">
        {{#if resultats}}
          {{#each resultats as | resultat |}}
            <div class="row m-2">
              <div class="col ml-auto">
                <label for="id_rdv">ID: </label>
              </div>
              <div class="col ml-auto">
                <input id="id_rdv" name="id_rdv" class="form-control" value="{{dataValues.id_RV}}" disabled>
              </div>
              <div class="col ml-auto">
                <label for="client">Client: </label>
              </div>
              <div class="col ml-auto">
                <input name="client" class="form-control" value="{{#with (lookup ../client @index)}}{{prenom}} {{nom}}{{/with}}" disabled>
              </div>
            </div>
            <div class="row m-2">
              <div class="col ml-auto">
                <label for="date float-start">Date: </label>
              </div>
              <div class="col ml-auto">
                <input id="date" name="date" class="form-control" value="{{dataValues.date}}" disabled>
              </div>
              <div class="col ml-auto">
                <label for="paiement">Paiement reçu:</label>
              </div>
              <div class="col ml-auto">
                <input name="paiement" class="form-control" value="{{#if dataValues.payer}}Oui{{else}}Non{{/if}}" disabled>
              </div>
            </div>
            <div class="row m-2">
              {{#with (lookup ../resultathoraire @index)}}
              <div class="col ml-auto">
                <label for="heureDebut">Heure de début: </label>
              </div>
              <div class="col ml-auto">
                <input name="heureDebut" class="form-control" value="{{dataValues.heure_debut}}" disabled>
              </div>
              <div class="col ml-auto">
                <label for="heureFin">Heure de fin: </label>
              </div>
              <div class="col ml-auto">
                <input name="heureFin" class="form-control" value="{{dataValues.heure_fin}}" disabled>
              </div>
            </div>
            <div class="row" hidden>
              <input name="id_plagehoraire" class="form-control" value="{{dataValues.id_plage_horaire}}" disabled>
            </div>
              {{/with}}
            <div class="row m-2">
              <div class="col-3">
                <label for="note">Notes: <label>
              </div>
              <div class="col-9">
                <input name="note" class="form-control" value="{{dataValues.note}}" disabled>
              </div>
            </div>

            <div class="row m-2">
              <div class="col text-center">
                <button id="modifieButton" type="button" class="btn btn-success center-block mt-2" data-bs-toggle="modal" data-bs-target="#modifieDispo">Modifier</button>
                {{#if ../Future}}
                    <a class="btn btn-success mt-2" href='/clients/profil/{{#with (lookup ../client @index)}}{{id_client}}{{/with}}/reservation/annulation/{{dataValues.id_RV}}'>Annuler</a>
                {{/if}}
              </div>
            </div>
            <hr class="mt-4">
          {{/each}}
        {{else}}
          <p>Aucune Réservation</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="modifieDispo" tabindex="-1">
  <form class="needs-validation" novalidate action="/psychologue/reservations/listeReservations/modifier" method="post">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">

        <div class="modal-header">
          <h5 class="modal-title">Modification d'une disponibilité</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">

          <div class="row">
            <div class="col">
              <input id="m_id_rdv" name="m_id_rdv" class="form-control" disabled>
            </div>
          </div>

          <div class="row">
            <div class="col">
              <label for="m_date_rv">Date du rendezvous: </label>
              <input type="date" class="form-control" id="m_date_rv" name="m_date_rv" placeholder="aaaa-mm-jj" required>
            </div>
          </div>

          <div class="row mt-2">
            <div class="col">
                <label for="m_hrDebut">Heure de Début:</label>
                <select class="form-select" id='m_hrDebut' name='m_hrDebut' aria-label="Default select example" required>
                  <option value="" selected disabled>Selectionnez l'heure de début</option>
                  {{#if HeureDebuts}}
                    {{#each HeureDebuts as | HeureDebut |}}
                    <option value="{{HeureDebut}}">{{HeureDebut}}</option>
                    {{/each}}
                  {{/if}}
                </select>
            </div>
            <div class="col">
                <label for="m_hrFin">Heure de Fin:</label>
                <select class="form-select" id='m_hrFin' name='m_hrFin' aria-label="Default select example" required>
                  <option value="" selected disabled>Selectionnez l'heure de fin</option>
                  {{#if HeureFins}}
                    {{#each HeureFins as | HeureFin |}}
                    <option value="{{HeureFin}}">{{HeureFin}}</option>
                    {{/each}}
                  {{/if}}
                </select>
            </div>
          </div>
          {{#if message}}<p style="color:red;">{{message}}</p>{{/if}}

          <div class="form-group mt-2">
            <label for="m_id_client">Nom du Client: </label>
            <select class="form-select" name='m_id_client' aria-label="Default select example">
              <option selected>Selectionnez le Client (Facultatif)</option>
              {{#if Clients}}
                {{#each Clients as | Client |}}
                <option value="{{Client.dataValues.id_client}}">{{Client.dataValues.id_client}}: {{Client.dataValues.prenom}} {{Client.dataValues.nom}}</option>
                {{/each}}
              {{/if}}
            </select>
          </div>

        </div>

        <div class="modal-footer">
          <button type="submit" class="btn btn-success">Sauvegarder</button>
        </div>

      </div>
    </div>
  </form>
</div>

{{#if scriptModal}}
  <script>
      $(document).ready(function(){
          $("#modifieDispo").modal('show');
      });
  </script>
{{/if}}

<script>
$(document).ready (function() {
   $('#modifieButton').click(function() {
      //get info
      var rdv_ID = $('#id_rdv').val();
      var Jdate = $('#date').val();
      //give info
      $('#m_id_rdv').val($('#id_rdv').val());
      $('#m_date').val($('#date').val());
   });
});
</script>

<script>
(function () {
  'use strict'

  // Fetch all the forms we want to apply custom Bootstrap validation styles to
  var forms = document.querySelectorAll('.needs-validation')

  // Loop over them and prevent submission
  Array.prototype.slice.call(forms)
    .forEach(function (form) {
      form.addEventListener('submit', function (event) {
        if (!form.checkValidity()) {
          event.preventDefault()
          event.stopPropagation()
        }

        form.classList.add('was-validated')
      }, false)
    })
})()
</script>
