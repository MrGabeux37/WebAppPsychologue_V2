<div class="row">
  <div class="col-sm-14 sol-md-11 col-lg-8 mx-auto">
    <div class="card mt-5">

      <div class="card-header">
        <h4 class="text-center">Liste des Réservations</h4>
      </div>

      <div class="card-body text-center" id="chaquereservation">

        <div class="row">
          <div class="col">
            <a href="/psychologue/reservations/listeReservations/ancienne" type="button" class="btn btn-success center-block mt-2">Anciennes Réservations</a>
            <a href="/psychologue/reservations/listeReservations/future" type="button" class="btn btn-success center-block mt-2">Réservations Futures</a>
            <a href="/psychologue/reservations/listeReservations" type="button" class="btn btn-success center-block mt-2">Toutes les Réservations</a>
          </div>
        </div>
        <hr class="mt-4">
        {{#if resultats}}
          {{#each resultats as | resultat |}}
            <div class="row ml-4">
              <div class="col-4">
                <p>ID Rendez-Vous: {{dataValues.id_RV}}<p>
              </div>
              <div class="col-7 ml-2">
                <p>Client: {{#with (lookup ../client @index)}}{{prenom}} {{nom}}{{/with}}</p>
              </div>
            </div>
            <div class="row ml-4 mt">
              <div class="col-4">
                <p>Date: {{dataValues.date}}</p>
              </div>
              <div class="col-7 ml-2">
                <p>Heure: {{#with (lookup ../resultathoraire @index)}}{{dataValues.heure_debut}} à {{dataValues.heure_fin}}{{/with}}</p>
              </div>
            </div>
            <div class="row ml-4 mt">
              <div class="col-4">
                <p>Note: {{dataValues.note}}</p>
              </div>
              <div class="col-7 ml-2">
                <p>Paiement reçu: {{#if dataValues.payer}}Oui{{else}}Non{{/if}}</p>
              </div>
            </div>
            <hr class="mt-4">
          {{/each}}
        {{else}}
          <p>Aucune Réservation</p>
        {{/if}}


      </div>
    </div>
  </div>
</div>
